{
  "pluginAlias": "TeslaPowerwall",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "default": "Tesla Powerwall",
        "required": true
      },
      "ip": {
        "title": "IP Address",
        "type": "string",
        "default": "192.168.1.100",
        "required": true,
        "format": "ipv4"
      },
      "port": {
        "title": "Port",
        "type": "string",
        "default": "443",
        "required": false
      },
      "password": {
        "title": "Password",
        "type": "string",
        "required": true
      },
      "username": {
        "title": "Username",
        "type": "string",
        "default": "customer",
        "required": false
      },
      "pollingInterval": {
        "title": "Polling Interval (seconds)",
        "type": "integer",
        "default": 15,
        "minimum": 5,
        "maximum": 300
      },
      "lowBattery": {
        "title": "Low Battery Threshold (%)",
        "type": "integer",
        "default": 20,
        "minimum": 1,
        "maximum": 50
      }
    }
  },
  "layout": [
    {
      "type": "fieldset",
      "title": "Connection Settings",
      "items": [
        "name",
        "ip",
        "port",
        "password",
        "username"
      ]
    },
    {
      "type": "fieldset",
      "title": "Advanced Settings",
      "items": [
        "pollingInterval",
        "lowBattery"
      ]
    }
  ]
}
